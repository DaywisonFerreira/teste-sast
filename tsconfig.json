{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
          "*": [
              "node_modules/*",
              "src/types/*"
          ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "src/__tests__/**/*"
    ]
}
